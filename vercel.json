{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm run install-deps", 
  "framework": "nextjs",
  "functions": {
    "backend/src/index.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/index.ts"
    }
  ]
}